{
    "files.associations": {
        "*.mak": "makefile",
        "*.tpp": "cpp",
        "*.svh": "systemverilog"
    },

    // editor settings
    "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
    "editor.inlineHints.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "editor.accessibilitySupport": "off",
    "editor.detectIndentation": false,
    "editor.dragAndDrop": false,
    "editor.links": false,
    "editor.minimap.renderCharacters": false,
    "editor.cursorBlinking": "phase",
    "editor.wordWrap": "on",
    "editor.rulers": [120, 140],

    // files settings
    "files.insertFinalNewline": true,
    "files.eol": "\n",

    // language specific formatter settings
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // workbench settings
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.wrapTabs": true,
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.settings.editor": "json",

    // windows settings
    "window.titleBarStyle": "custom",
    "window.restoreWindows": "none",

    // SCM settings
    "scm.alwaysShowActions": true,
    "scm.alwaysShowRepositories": true,

    // serach options
    "search.showLineNumbers": true,

    // git settings
    "git.path": "C:\\Program Files\\Git\\bin\\git.exe",
    "git.defaultCloneDirectory": "D:\\_projects\\",

    // integrated terminal settings
    "terminal.integrated.cwd": "D:\\_projects\\",
    "terminal.integrated.enablePersistentSessions": false,

    // powershell settings
    "powershell.integratedConsole.showOnStartup": false,

    // extension settings
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,

    // Better Comments settings
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],

    // Markdownlint extension settings
    "markdownlint.config": {
        "default": true,
        // Suppress MD007 to remove warnings from using table of contents
        "MD007": false,
        // Suppress MD026 to remove warnings from using question marks at the end of headings
        "MD026": false,
        // Suppress MD036 because emphasis as headers can sometimes lead to a more readable code
        "MD036": false,
        // Suppress MD040 because sometimes it's in order to use code block for monospaced plaintext
        "MD040": false
    },

    // C/C++ extension settings
    "C_Cpp.updateChannel": "Insiders",

    // ES6 and JSON settings
    "json.maxItemsComputed": 8000,
    "javascript.updateImportsOnFileMove.enabled": "always",

    // Prettier - Code Formatter settings
    "prettier.tabWidth": 4,

    // git settings
    "git.confirmSync": false,

    // GitLens settings
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "gitlens",
    "gitlens.views.lineHistory.location": "gitlens",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "gitlens.defaultDateFormat": "DD-MMMM-YYYY, HH:mm",
    "gitlens.defaultDateShortFormat": "DD-MMMM-YYYY",
    "gitlens.codeLens.enabled": false,

    // Python extension settings
    "python.defaultInterpreterPath": "C:\\Program Files\\Python39\\python.exe",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ]
}
